@*loops through the database - edit hyperlink feature & X for delete hyperlink*@

<div>
    @for (var i = 0; i < Model.Tasks.Count(); i++)
    {
        <div class="row">
            <div class="col-md-4">
                @Html.ActionLink(Model.Tasks[i].Name, "Edit", "Person", new { id = Model.Tasks[i].TaskID }, null)
            </div>
            <div class="col-md-4">
                @Model.Tasks[i].Chore
            </div>
            <div class="col-md-2">
                @Model.Tasks[i].Day
            </div>
            <div class="col-md-1">
                @Html.ActionLink("X", "Delete", "Person", new { id = Model.Tasks[i].TaskID }, null)
            </div>

        </div>
    }
</div>


