            <div class="col-md-4">
                @Model.Tasks[i].Chore
            </div>
            <div class="col-md-2">
                @Model.Tasks[i].Day
            </div>
            <div class="col-md-1">
                @Html.ActionLink("X", "Delete", "Person", new { id = Model.Tasks[i].TaskID }, null)
            </div>

        </div>
    }
</div>


